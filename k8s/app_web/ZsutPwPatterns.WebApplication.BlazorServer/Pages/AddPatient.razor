@page "/add-patient"
@using ZsutPw.Patterns.Application.Controller
@using ZsutPw.Patterns.Application.Model.Data
@using ZsutPw.Patterns.Application.Model
@inject IController controller
@inject IModel model
<h3>Add patient</h3>

<h5 style="margin-top: 16px">PESEL:</h5>

<RadzenTextBox Name="peseltext" @bind-Value=@model.Pesel Style="width: 160px" />

<h5 style="margin-top: 16px">Name:</h5>

<RadzenTextBox Name="nametext" @bind-Value=@model.Name Style="width: 160px" />

<h5 style="margin-top: 16px">Surname:</h5>

<RadzenTextBox Name="surnametext" @bind-Value=@model.Surname Style="width: 160px" />

<h5 style="margin-top: 16px">Sex:</h5>

<RadzenTextBox Name="sextext" @bind-Value=@model.Sex Style="width: 160px" />

<h5 style="margin-top: 16px">BirthDate:</h5>

<RadzenTextBox Name="BirthDatetext" @bind-Value=@model.BirthDate Style="width: 160px" />

<h5 style="margin-top: 16px">City:</h5>

<RadzenTextBox Name="Citytext" @bind-Value=@model.City Style="width: 160px" />

<h5 style="margin-top: 16px">Street:</h5>

<RadzenTextBox Name="Streettext" @bind-Value=@model.Street Style="width: 160px" />

<h5 style="margin-top: 16px">HouseNr:</h5>

<RadzenTextBox Name="HouseNrtext" @bind-Value=@model.HouseNr Style="width: 160px" />

<p> </p>

<RadzenButton Icon="add" Text="Add patient" Click=@controller.AddPatientAsync Style="width: 160px" />

<div style="margin-top: 12px; width: 324px; text-align: center">
    <RadzenLink Text="ZSUT IT PW home page" Path="https://zsut.tele.pw.edu.pl/" Target="_blank" />
</div>

@code {
    private IController controller_ = ControllerFactory.GetController(new EventDispatcher());
}
