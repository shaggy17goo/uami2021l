@page "/patient"
@using ZsutPw.Patterns.Application.Controller
@using ZsutPw.Patterns.Application.Model.Data
@using ZsutPw.Patterns.Application.Model
@inject IController controller
@inject IModel model

<h3>Get patient by ID</h3>
<h5 style="margin-top: 16px">Patient ID:</h5>

<RadzenTextBox Name="searchText" @bind-Value=@model.SearchText Style="width: 160px" />

<RadzenButton Icon="search" Text="Search" Click=@controller.GetPatientByIdAsync Style="width: 160px" />

<h5 style="margin-top: 16px">Patient</h5>

<RadzenListBox Name="patient" Data=@model.PatientById TValue="PatientDto" SelectedItem=@model.PatientById Style="width: 324px; height: 240px">
    <Template Context="patient">
        @patient.Name @patient.Surname
    </Template>
</RadzenListBox>

<div style="margin-top: 12px; width: 324px; text-align: center">
    <RadzenLink Text="ZSUT IT PW home page" Path="https://zsut.tele.pw.edu.pl/" Target="_blank" />
</div>