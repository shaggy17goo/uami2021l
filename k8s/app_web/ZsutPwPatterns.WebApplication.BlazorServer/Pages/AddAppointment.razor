@page "/add-appointment"
@using ZsutPw.Patterns.Application.Controller
@using ZsutPw.Patterns.Application.Model.Data
@using ZsutPw.Patterns.Application.Model
@inject IController controller
@inject IModel model
<h3>Add appointment</h3>

<h5 style="margin-top: 16px">Doctor ID:</h5>

<RadzenTextBox Name="doctorId" @bind-Value=@model.DoctorId Style="width: 160px" />

<h5 style="margin-top: 16px">Patient ID:</h5>

<RadzenTextBox Name="patietnId" @bind-Value=@model.PatientId Style="width: 160px" />

<h5 style="margin-top: 16px">Date of appointment:</h5>

<RadzenTextBox Name="Date" @bind-Value=@model.DateOfAppointment Style="width: 160px" />

<h5 style="margin-top: 16px">Description:</h5>

<RadzenTextBox Name="Description" @bind-Value=@model.Description Style="width: 160px" />

<p> </p>

<RadzenButton Icon="add" Text="Add appointment" Click=@controller.AddAppointmentAsync Style="width: 160px" />

<div style="margin-top: 12px; width: 324px; text-align: center">
    <RadzenLink Text="ZSUT IT PW home page" Path="https://zsut.tele.pw.edu.pl/" Target="_blank" />
</div>

@code {
    private IController controller_ = ControllerFactory.GetController(new EventDispatcher());
}
