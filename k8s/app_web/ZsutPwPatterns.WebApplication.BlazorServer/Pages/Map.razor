@page "/map"
@using ZsutPw.Patterns.Application.Controller
@using ZsutPw.Patterns.Application.Model.Data
@inject IController controller
@inject IModel model

<h5>Text to search:</h5>

<RadzenTextBox Name="searchText" @bind-Value=@model.SearchText Style="width: 160px" />

<RadzenButton Icon="search" Text="Search" Click=@controller.GetPatientsByDoctorIdAsync Style="width: 160px" />

<h5 style="margin-top: 16px">Nodes</h5>

<RadzenListBox Name="patientsList" Data=@model.PatientsByDoctorId TValue="PatientsShortDto" SelectedItem=@model.SelectedPatientsByDoctorId Style="width: 324px; height: 240px">
    <Template Context="patientsList">
        @patientsList.Name @patientsList.Surname
    </Template>
</RadzenListBox>

<RadzenMenu>
    <RadzenMenuItem Text="Add" Icon="add" />
    <RadzenMenuItem Text="View" Icon="pageview" />
    <RadzenMenuItem Text="Edit" Icon="edit" />
</RadzenMenu>

<div style="margin-top: 12px; width: 324px; text-align: center">
    <RadzenLink Text="ZSUT IT PW home page" Path="https://zsut.tele.pw.edu.pl/" Target="_blank" />
</div>

@code {
    private IController controller_ = ControllerFactory.GetController(new EventDispatcher());

    protected override async Task OnInitializedAsync()
    {
        IModel model1 = controller_.Model;

        IModel model2 = controller.Model;

        IModel model3 = model;
    }
}
