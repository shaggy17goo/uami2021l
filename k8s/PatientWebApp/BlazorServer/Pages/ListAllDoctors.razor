@page "/list-all-doctors"
@using Controller
@using Model
@using Model.Data
@inject IController Controller
@inject IModel Model

<RadzenButton Icon="load" Text="Load" Click="@Controller.GetDoctorsAsync" Style="width: 160px"/>

<h5 style="margin-top: 16px">Doctors List</h5>

<RadzenListBox Name="doctorsList" Data="@Model.DoctorDtoList" TValue="DoctorDto" SelectedItem="@Model.SelectedDoctorDto" Style="width: 500px; height: 500px">
    <Template Context="doctorsList">
        |Name:| @doctorsList.name @doctorsList.surname |Certifications:|
        @foreach (var cert in doctorsList.certifications)
        {
            @cert
        }
    </Template>
</RadzenListBox>

<RadzenMenu>
    <RadzenButton Text="Add" Icon="add" Size="ButtonSize.Small" Click="@ToTrue"></RadzenButton>
</RadzenMenu>

<div style="margin-top: 12px; width: 324px; text-align: center">
    <RadzenLink Text=":)" Path="https://cat-bounce.com/" Target="_blank"/>
</div>

<SfDialog Width="230px" @bind-Visible="@IsVisible">
    <DialogButtons >
        <RadzenButton Text="Not implemented" Click="@ToFalse" Style="align-content: center"></RadzenButton>
    </DialogButtons>
</SfDialog>

@code{
    private bool IsVisible { get; set; }

    private void ToTrue()
    {
        IsVisible = true;
    }

    private void ToFalse()
    {
        IsVisible = false;
    }

}