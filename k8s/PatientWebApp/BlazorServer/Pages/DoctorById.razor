@page "/get-doctor-by-id"
@using Controller
@using Model
@using Model.Data
@inject IController Controller
@inject IModel Model


<RadzenTextBox Name="searchText" @bind-Value="@Model.SearchText" Style="width: 160px"/>

<RadzenButton Icon="load" Text="Load" Click="@Controller.GetDoctorByIdAsync" Style="width: 160px"/>

<h5 style="margin-top: 16px">Doctor</h5>

<RadzenListBox Name="doctor" Data="@Model.DoctorById" TValue="DoctorDto" SelectedItem="@Model.SelectedDoctorDto" Style="width: 500px; height: 100px">
    <Template Context="doctor">
        @doctor.name @doctor.surname
    </Template>
</RadzenListBox>



<div style="margin-top: 12px; width: 324px; text-align: center">
    <RadzenLink Text=":)" Path="https://cat-bounce.com/" Target="_blank"/>
</div>

<SfDialog Width="230px" @bind-Visible="@IsVisible">
    <DialogButtons >
        <RadzenButton Text="Not implemented" Click="@ToFalse" Style="align-content: center"></RadzenButton>
    </DialogButtons>
</SfDialog>

@code{
    private bool IsVisible { get; set; }

    private void ToTrue()
    {
        IsVisible = true;
    }

    private void ToFalse()
    {
        IsVisible = false;
    }
}