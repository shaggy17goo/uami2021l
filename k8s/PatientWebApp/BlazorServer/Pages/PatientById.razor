@page "/get-patient-by-id"
@using Controller
@using Model
@using Model.Data
@inject IController Controller
@inject IModel Model


<RadzenTextBox Name="searchText" @bind-Value="@Model.SearchText" Style="width: 160px"/>

<RadzenButton Icon="load" Text="Load" Click="@Controller.GetPatientByIdAsync" Style="width: 160px"/>

<div class="container">
    <h3 class="p-3 text-center">Patient by id</h3>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Name</th>
            <th>PESEL</th>
            <th>Birthday</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var patient in @Model.PatientById)
        {
            <tr>
                <td>@patient.Name @patient.Surname</td>
                <td>@patient.Pesel</td>
                <td>@patient.BirthDate</td>
            </tr>
        }
        </tbody>
    </table>
</div>



<div style="margin-top: 12px; width: 324px; text-align: center">
    <RadzenLink Text=":)" Path="https://cat-bounce.com/" Target="_blank"/>
</div>

<SfDialog Width="230px" @bind-Visible="@IsVisible">
    <DialogButtons >
        <RadzenButton Text="Not implemented" Click="@ToFalse" Style="align-content: center"></RadzenButton>
    </DialogButtons>
</SfDialog>

@code{
    private bool IsVisible { get; set; }

    private void ToTrue()
    {
        IsVisible = true;
    }

    private void ToFalse()
    {
        IsVisible = false;
    }
}